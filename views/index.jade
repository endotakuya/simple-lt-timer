doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')

    title Simple LT Timer

    //- css
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel="stylesheet", href='/jquery-drawer/dist/css/drawer.min.css')
    link(rel='stylesheet', href='/stylesheets/layout.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')

    //- js
    script(type='text/javascript', src='/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/iscroll/build/iscroll.js')
    script(type='text/javascript', src='/jquery-drawer/dist/js/drawer.min.js')
    script(type='text/javascript', src='/javascripts/sidebar.js')
    script(type='text/javascript', src='/javascripts/timer.js')
    script(type='text/javascript', src='/javascripts/jquery.cookie.js')
    script(type='text/javascript', src='https://cdn.mlkcca.com/v0.6.0/milkcocoa.js')
  
  body.drawer.drawer--right
    button.drawer-toggle.drawer-hamburger
      span.sr-only toggle navigation
      span.drawer-hamburger-icon
    nav.drawer-nav(role="navigation")
      .drawer-menu
        .timer-setting
          h2.sidebar-title Set Timer
          .timer-set-up
            button.min-up(type='button') ▲
            button.sec-up ▲
          p.timer-set
          .timer-set-down
            button.min-down ▼
            button.sec-down ▼
          h2.sidebar-title Remote Control
          .qr-image
            img(src='images/qr/#{pr_image}' alt="ロゴ")
    .content
      main
        p.time

      .botton-list
        button.start START
        button.reset RESET
        button.clear CLEAR